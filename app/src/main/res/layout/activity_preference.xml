<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pref.PreferenceActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/prefTabLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/wordExamPrefTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/word_exam_menu" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/importPrefTabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/import_pref_tab" />
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/prefViewPager"
        android:layout_width="409dp"
        android:layout_height="681dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prefTabLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>